{
  "manifest_version": 2,
  "name": "Jira Dark Theme",
  "version": "1.0",
  "description": "The dark side of the Jira",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "128": "images/icon.png"
  },
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "css/main.css"
  ],
  "content_scripts": [
    {
      "run_at": "document_start",
      "matches": [
        "*://*/*"
      ],
      "css": [],
      "js": [
        "js/main.js"
      ],
      "all_frames": true
    }
  ]
}
